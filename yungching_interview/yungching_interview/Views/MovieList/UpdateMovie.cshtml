@model DataAccess.Movie

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">更新電影</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("UpdateMovie", "MovieList", null, new AjaxOptions() { HttpMethod = "Post", OnSuccess = "RefreshMovieList" }, new { id = "FormCreateMovie" }))
    {
        @Html.Hidden("ID")
        <div class="row">
            <div class="col-md-12 row form-group">
                <div class="col-md-3">
                    電影名稱
                </div>
                <div class="col-md-9">
                    @Html.TextBox("Title", Model.Title, new { @class = "form-control" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>
            </div>
            <div class="col-md-12 row form-group">
                <div class="col-md-3">
                    電影釋出時間
                </div>
                <div class="col-md-9">
                    @Html.TextBox("ReleaseDate", Model.ReleaseDate.ToString("yyyy-MM-dd"), new { @class = "form-control", type = "date" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.ReleaseDate)
                    </div>
                </div>
            </div>
            <div class="col-md-12 row form-group">
                <div class="col-md-3">
                    電影類型
                </div>
                <div class="col-md-9">
                    @Html.TextBox("Genre", Model.Genre, new { @class = "form-control" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Genre)
                    </div>
                </div>
            </div>
            <div class="col-md-12 row form-group">
                <div class="col-md-3">
                    電影價格
                </div>
                <div class="col-md-9">
                    @Html.TextBox("Price", Model.Price, new { @class = "form-control", type = "number" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                </div>
            </div>
            <div class="col-md-12 row form-group">
                <div class="col-md-3">
                    電影評分
                </div>
                <div class="col-md-9">
                    @Html.TextBox("Rating", Model.Rating, new { @class = "form-control" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Rating)
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-success" onclick="$('#FormCreateMovie').submit()">更新</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">關閉</button>
</div>
